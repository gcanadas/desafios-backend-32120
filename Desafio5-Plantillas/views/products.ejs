<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desafio 5: Motores de plantillas</title>
</head>
<body>
    <h1>Desafio 5: Motores de plantillas</h1>
    <% if (isEmpty) { %>
        <p>No se encontraron productos</p>
    <% } else { %>
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            <% productos.forEach(function(item) { %>
                <tr>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td><img src="<%= item.URL %>" alt="<%= item.name %>" style="width: 200px"></td>
                </tr>
            <% }); %>
        </table>
    <% }; %>
    <br>       
    <a href="/">Agregar un nuevo producto</a>
</body>
</html>